<div class="row list">
	<div class="container">
    	<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<div class="panel panel-login designRow">		
					<p class="list-group-item active toDoList">
						LOGIN
					</p>
					<div class="panel-body">
						<div class="row">
							<div class="col-lg-12">
								<div style="color:d1282d; font-weight:bold; text-align:center;" class="col-md-6 col-md-offset-3"><%= error %></div>
								<form id="login-form" method="post" role="form" style="display: block;">
									<div class="form-group">
										<input type="text" name="username" id="username" tabindex="1" class="form-control" placeholder="exemple@mail.com" value="">
									</div>
									<div class="form-group">
										<input type="password" name="password" id="password" tabindex="2" class="form-control" placeholder="Password">
									</div>
										<div class="form-group">
											<div class="row">
												<div class="col-sm-6 col-sm-offset-3">
													<input type="submit" name="login-submit" id="login-submit" tabindex="4" class="form-control btn btn-login" value="Log In">
												</div>
											</div>
										</div>
									<div class="form-group">
										<div class="row">
											<div class="col-lg-12">
												<div class="text-center">
												<p>No account ? </p>
													<a href="/register" tabindex="5" class="forgot-password">Sign up</a>
												</div>
											</div>
										</div>
									</div>
								</form>
							
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>